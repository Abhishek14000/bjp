<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to College</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: #f0f0f0;
        }

        #college-gate {
            text-align: center;
            margin: 50px 0;
        }

        #college-gate img {
            width: 300px;
            cursor: pointer;
        }

        .section {
            margin: 20px;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .section img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin: 10px;
            cursor: pointer;
        }

        .back-button {
            display: block;
            margin: 20px 0;
            color: #00f;
            text-decoration: underline;
            cursor: pointer;
        }

        .portal-section {
            display: none;
        }
    </style>
</head>
<body>
    <div id="college-gate">
        <h1>Welcome to College</h1>
        <img src="college-gate.jpg" alt="Hansraj College Gate" onclick="enterCollege()">
    </div>

    <div id="college-sections" class="portal-section">
        <h2>College Sections</h2>
        <div class="section" onclick="showSection('CBlock')">C Block</div>
        <div class="section" onclick="showSection('ABlock')">A Block</div>
        <span class="back-button" onclick="goBack('college-gate')">Back</span>
    </div>

    <div id="CBlock" class="portal-section">
        <h3>C Block</h3>
        <div class="section" onclick="showSubSection('WallOfFame')">Wall of Fame</div>
        <div class="section" onclick="showSubSection('Class105')">Class No 105</div>
        <div class="section" onclick="showSubSection('LP')">LP</div>
        <div class="section" onclick="showSubSection('PeepalTree')">Peepal Tree</div>
        <div class="section" onclick="showSubSection('Library')">Library</div>
        <div class="section" onclick="showSubSection('Canteen')">Canteen</div>
        <div class="section" onclick="showSubSection('BlastFromPast')">Blast from the Past</div>
        <span class="back-button" onclick="goBack('college-sections')">Back</span>
    </div>

    <div id="ABlock" class="portal-section">
        <h3>A Block</h3>
        <div class="section" onclick="showSubSection('Wall')">The Wall</div>
        <div class="section" onclick="showSubSection('Auditorium')">Auditorium</div>
        <span class="back-button" onclick="goBack('college-sections')">Back</span>
    </div>

    <div id="WallOfFame" class="portal-section">
        <h4>Wall of Fame</h4>
        <video controls width="600" height="400">
            <source src="modi.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <img src="bjp.jpg" alt="Image 2" style="width:260.8px;height:530.4px;">
        <span class="back-button" onclick="goBack('CBlock')">Back</span>
    </div>

    <div id="Class105" class="portal-section">
        <h4>Class No 105</h4>
        <img src="cls.jpg" alt="Image 1" style="width:350px;height:445px;">
        <img src="https://path/to/image2.jpg" alt="Image 2">
        <img src="https://path/to/image3.jpg" alt="Image 3">
        <span class="back-button" onclick="goBack('CBlock')">Back</span>
    </div>
    
    <div id="LP" class="portal-section">
        <h4>LP</h4>
         <img src="lp.jpg" alt="Image 1" style="width:388.4px;height:517px;">
        <span class="back-button" onclick="goBack('CBlock')">Back</span>
    </div>

    <div id="PeepalTree" class="portal-section">
        <h4>Peepal Tree</h4>
        <img src="pplsol.jpg" alt="Image 1" style="width:388.4px;height:517px;">
        <img src="ppl.jpg" alt="Image 1" style="width:388px;height:517px;">
        <img src="threetee.jpg" alt="Image 1" style="width:517px;height:388.4px;">
        <span class="back-button" onclick="goBack('CBlock')">Back</span>
    </div>

    <div id="Library" class="portal-section">
        <h4>Library</h4>
        <img src="lib.jpg" alt="Image 1" style="width:388px;height:517px;">
        <span class="back-button" onclick="goBack('CBlock')">Back</span>
    </div>

    <div id="Canteen" class="portal-section">
        <h4>Canteen</h4>
        <video controls width="600" height="400">
            <source src="silentfeud.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <span class="back-button" onclick="goBack('CBlock')">Back</span>
    </div>

    <div id="BlastFromPast" class="portal-section">
        <h4>Blast from the Past</h4>
        <img src="https://path/to/image1.jpg" alt="Image 1">
        <span class="back-button" onclick="goBack('CBlock')">Back</span>
    </div>

    <div id="Wall" class="portal-section">
        <h4>The Wall</h4>
        <img src="https://path/to/image1.jpg" alt="Image 1">
        <img src="https://path/to/image2.jpg" alt="Image 2">
        <img src="https://path/to/image3.jpg" alt="Image 3">
        <span class="back-button" onclick="goBack('ABlock')">Back</span>
    </div>

    <script>
        function enterCollege() {
            document.getElementById('college-gate').style.display = 'none';
            document.getElementById('college-sections').style.display = 'block';
        }

        function showSection(sectionId) {
            document.querySelectorAll('.portal-section').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById(sectionId).style.display = 'block';
        }

        function showSubSection(subSectionId) {
            document.querySelectorAll('.portal-section').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById(subSectionId).style.display = 'block';
        }

        function goBack(sectionId) {
            document.querySelectorAll('.portal-section').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById(sectionId).style.display = 'block';
        }
    </script>
</body>
</html>
